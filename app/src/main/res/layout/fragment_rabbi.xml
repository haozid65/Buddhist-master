                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_alignTop="@id/riv_rabbi2"
                        android:layout_alignBottom="@id/riv_rabbi2"
                        android:layout_marginRight="@dimen/padding"
                        android:gravity="center"
                        android:ems="1"
                        android:maxEms="1"
                        />
                        />

                    <TextView
                        android:id="@+id/tv_rabbi_temple_2"
                        android:layout_width="match_parent"
                        android:gravity="center"
                        android:layout_height="wrap_content"
                        android:layout_alignLeft="@id/riv_rabbi2"
                        android:layout_alignRight="@id/riv_rabbi2"
                        android:layout_below="@id/riv_rabbi2"
                        android:layout_marginTop="8dp"
                        />

                </RelativeLayout>

            </LinearLayout>

        </LinearLayout>

    </ScrollView>

</cn.bingoogolapple.refreshlayout.BGARefreshLayout>
