            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/padding"
                android:src="@mipmap/tjfs"
                />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingLeft="@dimen/padding"
                android:paddingRight="@dimen/padding"
                android:gravity="center"
                android:orientation="horizontal">

                <RelativeLayout
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:gravity="center"
                    android:layout_height="wrap_content">


                    <com.makeramen.roundedimageview.RoundedImageView
                        android:id="@+id/riv_rabbi1"
                        android:layout_width="96dp"
                        android:layout_height="96dp"
                        android:layout_centerHorizontal="true"
                        app:riv_oval="true"
                        />

                    <TextView
                        android:id="@+id/tv_rabbi_name_1"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_alignTop="@id/riv_rabbi1"
                        android:layout_alignBottom="@id/riv_rabbi1"
                        android:layout_marginRight="@dimen/padding"
                        android:gravity="center"
                        android:ems="1"
                        android:maxEms="1"
                        />

                    <TextView
                        android:id="@+id/tv_rabbi_temple_1"
                        android:layout_width="match_parent"
                        android:gravity="center"
                        android:layout_height="wrap_content"
                        android:layout_alignLeft="@id/riv_rabbi1"
                        android:layout_alignRight="@id/riv_rabbi1"
                        android:layout_below="@id/riv_rabbi1"
                        android:layout_marginTop="8dp"
                        />

                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:orientation="vertical"
                    android:layout_height="wrap_content">

