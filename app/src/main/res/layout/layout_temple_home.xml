<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">


    <!-- 推荐寺院的那个房子view-->

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/padding"
        android:layout_marginTop="@dimen/padding"
        android:src="@mipmap/tjsy" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white">

        <ImageView
            android:id="@+id/iv_11"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:adjustViewBounds="true"
            android:src="@mipmap/tuijiansimiaotop" />

        <ImageView
            android:id="@+id/iv_12"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/iv_11"
            android:layout_marginLeft="16dp"
            android:adjustViewBounds="true"
            android:src="@mipmap/sec_img01" />

        <ImageView
            android:id="@+id/iv_13"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_below="@id/iv_11"
            android:layout_marginRight="16dp"
            android:adjustViewBounds="true"
            android:src="@mipmap/sec_img01" />

        <ImageView
            android:id="@+id/iv_14"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/iv_11"
            android:layout_centerHorizontal="true"
            android:layout_marginRight="16dp"
            android:adjustViewBounds="true"
            android:src="@mipmap/sec_img01" />

        <View
            android:id="@+id/center1"
            android:layout_width="1dp"
            android:layout_height="1dp"
            android:layout_below="@id/iv_11"
            android:layout_centerHorizontal="true" />


        <ImageView
            android:id="@+id/iv_16"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignRight="@id/center1"
            android:layout_below="@id/iv_14"
            android:layout_marginLeft="16dp"
            android:adjustViewBounds="true"
            android:src="@mipmap/sec_img02" />

        <ImageView
            android:id="@+id/iv_17"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@id/center1"
            android:layout_alignParentRight="true"
            android:layout_below="@id/iv_14"
            android:layout_marginRight="16dp"
            android:adjustViewBounds="true"
            android:src="@mipmap/sec_img03" />

        <LinearLayout
            android:id="@+id/ll_1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_above="@id/iv_16"
            android:layout_below="@id/iv_11"
            android:layout_toLeftOf="@id/iv_14"
            android:layout_toRightOf="@id/iv_12"
            android:clickable="true"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/iv_temple_1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

            <TextView
                android:id="@+id/tv_temple_name_1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <TextView
                android:id="@+id/tv_temple_addr_1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="11sp" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/ll_2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_above="@id/iv_16"
            android:layout_below="@id/iv_11"
            android:layout_toLeftOf="@id/iv_13"
            android:layout_toRightOf="@id/iv_14"
            android:clickable="true"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/iv_temple_2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

            <TextView
                android:id="@+id/tv_temple_name_2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                />

            <TextView
                android:id="@+id/tv_temple_addr_2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="12sp" />

        </LinearLayout>


    </RelativeLayout>

</LinearLayout>